# necessary to load scripting-addition during startup on macOS Big Sur
# *yabai --load-sa* is configured to run through sudo without a password
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# mission-control desktop labels
yabai -m space 1 --label web
yabai -m space 2 --label code
yabai -m space 3 --label terminal
yabai -m space 4 --label social
yabai -m space 5 --label cluster
yabai -m space 9 --label media
yabai -m space 10 --label notes

# window rules
yabai -m rule --add app="^Google Chrome$" space=web manage=off
yabai -m rule --add app="^Alacritty$" space=terminal
yabai -m rule --add app="^(IntelliJ IDEA|WebStorm|DataGrip|GoLand|Fleet)$" manage=off space=code
yabai -m rule --add app="^(IntelliJ IDEA|WebStorm|DataGrip|GoLand|Fleet)$" title="~/workspace/" manage=on space=code
yabai -m rule --add app="^Slack$" space=social
yabai -m rule --add app="^Google Chat$" space=social
yabai -m rule --add app="^MongoDB Compass$" space=cluster 
yabai -m rule --add app="^Spotify$" space=media
yabai -m rule --add app="^Obsidian$" space=notes
yabai -m rule --add app="^Linear$" space=notes

yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="System Information" manage=off
yabai -m rule --add app="Toolbox|JetBrains Toolbox" manage=off
yabai -m rule --add app="^Slack$" manage=off

yabai -m config --space social layout float

yabai -m config                              \
    external_bar                off:41:0     \
    mouse_follows_focus         on           \
    focus_follows_mouse         autoraise    \
    window_placement            second_child \
    window_topmost              off          \
    window_shadow               off          \
    window_animation_duration   0.25         \
    insert_feedback_color       0xaad75f5f   \
    active_window_border_color  0xBF775759   \
    normal_window_border_color  0x7f353535   \
    window_border_width         4            \
    window_border_radius        12           \
    window_border_blur          on           \
    window_border_hidpi         on           \
    window_border               on           \
    split_ratio                 0.50         \
    split_type                  auto         \
    auto_balance                off          \
    top_padding                 10           \
    left_padding                10           \
    right_padding               10           \
    bottom_padding              10           \
    window_gap                  10           \
    layout                      bsp          \
    mouse_modifier              fn           \
    mouse_action1               move         \
    mouse_action2               resize       \
    mouse_drop_action           swap

echo "yabai configuration loaded.."

